<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="@dimen/ability_card_padding"
        android:paddingEnd="@dimen/ability_card_padding">

        <TextView
            android:id="@+id/ability_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/ability_name_text_size"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/ability_slot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="@dimen/ability_name_text_size"/>

        <CheckBox
            android:id="@+id/ability_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/is_hidden"
            android:enabled="false"
            android:textColor="@android:color/tab_indicator_text"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
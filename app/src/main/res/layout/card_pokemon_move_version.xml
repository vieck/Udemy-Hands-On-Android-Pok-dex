<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/card_padding"
        android:paddingEnd="@dimen/card_padding">

        <TextView
            android:id="@+id/version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/version_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/learned_at_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/version_name"
            android:layout_margin="@dimen/card_margin"
            android:textSize="@dimen/version_text_size"
            android:text="@string/level_learned_at" />

        <TextView
            android:id="@+id/learned_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/learned_at_label"
            android:textSize="@dimen/version_text_size" />

        <TextView
            android:id="@+id/move_learn_method_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/learned_at_label"
            android:layout_margin="@dimen/card_margin"
            android:textSize="@dimen/card_text_size"
            android:text="@string/move_learn_method"/>

        <TextView
            android:id="@+id/move_learn_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/move_learn_method_label"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/version_text_size"
            android:text="@string/move_learn_method"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>